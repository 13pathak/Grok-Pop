{
    "manifest_version": 3,
    "name": "Grok Pop",
    "version": "1.0",
    "description": "Floating Grok.com popup similar to Perplexity extension.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "declarativeNetRequest",
        "cookies"
    ],
    "host_permissions": [
        "https://grok.com/*",
        "https://x.com/*",
        "https://twitter.com/*",
        "https://x.ai/*",
        "https://accounts.x.ai/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Open Grok Pop"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "commands": {
        "toggle_popup": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y",
                "mac": "Command+Shift+Y"
            },
            "description": "Toggle Grok Pop"
        }
    }
}